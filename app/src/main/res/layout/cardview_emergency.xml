<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nombre de la veterinaria -->
            <TextView
                android:id="@+id/nombreVeterinaria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de la Veterinaria"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Dirección -->
            <TextView
                android:id="@+id/direccionVeterinaria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Dirección de la Veterinaria"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray" />

            <!-- Número de teléfono -->
            <TextView
                android:id="@+id/telefonoVeterinaria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Teléfono de la Veterinaria"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
